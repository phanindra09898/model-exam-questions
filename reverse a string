#include<stdio.h>
#include<string.h>

int main() {
    char str[100];
    int i;
    
    printf("enter the word: ");
    fgets(str,sizeof (str),stdin);
    
    printf("reverse of the string is: ");
        for (i=strlen(str) - 1; i>=0; i--) {
            printf("%c",str[i]);
        }
    return 0;
}
